  "devDependencies": {
    "@next/bundle-analyzer": "^15.5.2",
    "@types/cors": "^2.8.19",
    "@types/date-fns": "^2.6.3",
    "@types/express": "^4.17.23",
    "@types/json-schema": "^7.0.15",
    "@types/node": "^20.19.11",
    "@types/react": "19.1.12",
