{
  "name": "mcp-serve",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev -p 8931",
    "server:inspect": "set DANGEROUSLY_OMIT_AUTH=true && npx @modelcontextprotocol/inspector npm run dev:http",
    "build": "tsc -b && next build",
    "analyze:open": "cross-env ANALYZE=true next build && xdg-open .next/analyze/client.html",
    "build:local": "cross-env NO_HTTPS='1' tsc -b && next build",
    "analyze": "cross-env ANALYZE=true next build",
    "start": "next start",
    "docker:pg": "docker run --name mcp-chatbot-pg -e POSTGRES_PASSWORD=your_password -e POSTGRES_USER=your_username -e POSTGRES_DB=your_database_name -p 5432:5432 -d postgres"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^2.0.12",
    "@ai-sdk/google": "^2.0.12",
    "@ai-sdk/openai": "^2.0.24",
    "@ai-sdk/openai-compatible": "^1.0.15",
    "@ai-sdk/react": "^2.0.34",
    "@ai-sdk/xai": "^2.0.16",
    "@modelcontextprotocol/sdk": "^1.17.5",
    "@openrouter/ai-sdk-provider": "^1.2.0",
    "@xyflow/react": "^12.8.4",
    "ai": "^5.0.34",
    "chokidar": "^4.0.3",
    "clsx": "^2.1.1",
    "consola": "^3.4.2",
    "cors": "^2.8.5",
    "cross-env": "^10.0.0",
    "date-fns": "^4.1.0",
    "dotenv": "^16.6.1",
    "drizzle-orm": "^0.44.5",
    "express": "^4.19.2",
    "json-schema": "^0.4.0",
    "logger": "^0.0.1",
    "next": "^15.5.2",
    "ollama-ai-provider-v2": "^1.3.0",
    "openai": "^5.15.0",
    "pg": "^8.16.3",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "ts-edge": "^1.0.4",
    "ts-safe": "^0.0.5",
    "zod": "^4.1.5"
